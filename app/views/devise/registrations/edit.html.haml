%h2
  Edit #{resource_name.to_s.humanize}
.row
  .span3
    %ul.nav.nav-list.navigation.affix
      %li
        %a{:href => "#user"} Change my username
      %li
        %a{:href => "#password"} Change my password
      %li
        %a{:href => "#biography"} My biography
      %li
        %a{:href => "#skills"} My abilities/skills
      %li
        %a{:href => "#blogs"} Manage blogs
      %li
        %a{:href => "#socials"} Social links
      %li
        %a{:href => "#cancel"} Cancel my account
  .span9
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      .span8
        %section#user.well
          %div.page-header
            = "Change my username"
          %div
            = f.label :username
            = f.text_field :username
          %div
            = f.label :first_name
            = f.text_field :first_name
          %div
            = f.label :last_name
            = f.text_field :last_name
          %div
            = f.label :email
            = f.email_field :email
          %div
            =f.label :avatar
            =f.file_field :avatar
          .act_buttons
            = f.submit "Save", :class => 'btn btn-primary btn-warning', :id => 'username_sub'
            = link_to "Back", :back

        =# password
        %section#password.well
          %div.page-header
            = "Change my password"
          %div
            = f.label :password
            = f.password_field :password, :autocomplete => 'off'
            %i (leave blank if you don't want to change it)
            %br/
          %div
            = f.label :password_confirmation
            = f.password_field :password_confirmation
          %div
            = f.label :current_password
            = f.password_field :current_password
            %i (we need your current password to confirm your changes)
          .act_buttons
            = f.submit "Save", :class => 'btn btn-primary btn-warning', :id => 'password_sub'
            = link_to "Back", :back


        =# biography
        %section#skills.well
          %div.page-header
            = "Skills"
          %div
            = f.label :tag_names, "Tags"
            = f.text_field :tag_names
          .act_buttons
            = f.submit "Save", :class => 'btn btn-primary btn-warning', :id => 'skills_sub'
            = link_to "Back", :back

        =# biography
        %section#biography.well
          %div.page-header
            = "Biography"
          %div
            = f.label :bio
            = f.text_area :bio
          .act_buttons
            = f.submit "Save", :class => 'btn btn-primary btn-warning', :id => 'biography_sub'
            = link_to "Back", :back

        =# blogs
        %section#blogs.well
          %div.page-header
            = "Manage my blogs"
          = simple_nested_form_for resource do |f|
            = f.fields_for :blogs
            %br/
            = f.link_to_add t("add_next"), :blogs, :class => 'btn btn-small btn-primary'
          .act_buttons
            = f.submit "Save", :class => 'btn btn-primary btn-warning', :id => 'blogs_sub'
            = link_to "Back", :back

        =# socials
        %section#socials.well
          %div.page-header
            = "Add social profiles"
          %div
            = f.label :twitter
            = f.text_field :twitter
          %div
            = f.label :facebook
            = f.text_field :facebook
          %div
            = f.label :google_plus
            = f.text_field :google_plus
          %div
            = f.label :github
            = f.text_field :github
          %div
            = f.label :stackoverflow
            = f.text_field :stackoverflow
          %div
            = f.label :flickr
            = f.text_field :flickr
          %div
            = f.label :delicious
            = f.text_field :delicious
          %div
            = f.label :linkedin
            = f.text_field :linkedin
          %div
            = f.label :bitbucket
            = f.text_field :bitbucket
          %div
            = f.label :gtalk
            = f.text_field :gtalk
          %div
            = f.label :skype
            = f.text_field :skype
          %div
            = f.label :jabber
            = f.text_field :jabber

          .act_buttons
            = f.submit "Save", :class => 'btn btn-primary btn-warning', :id => 'social_sub'
            = link_to "Back", :back

        =# cancel
        %section#cancel.well
          %div.page-header
            = "Cancel my account"
          %p
            Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
