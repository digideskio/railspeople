#new_user_map
  #user_map

%br
%br
.span6
  - if @user.bio.present?
    .bio
      %p= @user.bio
      - if @user.tags.present?
        - @user.tags.each do |tag|
          =link_to tag.name, tag_path(:tag => tag.name), :class => 'btn btn-info btn-small btn-tags'
      .clear
      - if @user.looking_for_freelance_work?
        .work 
        %i.icon-star-empty
        %span Looking for freelance work 
      - elsif @user.looking_for_full_time_work?
        .work 
        %i.icon-star
        %span Looking for full-time work
  %br
  - if email_is_visible?(@user)
    %i.icon-envelope
    %strong Email:
    %p= @user.email
  - if im_details_visible?(@user)
    %h3 Finding #{@user.first_name}
    - if @user.blogs.any?
      %p Blog:
    - if @user.twitter.present?
      %p Twitter:
      %p= @user.twitter
    - if @user.facebook.present?
      %p Facebook:
      %p= @user.facebook
    - if @user.google_plus.present?
      %p Google+:
      %p= @user.google_plus
    - if @user.github.present?
      %p Github:
      %p= @user.github
    - if @user.stackoverflow.present?
      %p Stackoverflow:
      %p= @user.stackoverflow
#near_information.offser6
  %h4 Click on the map to see closest Rails users
#near_people.offset6.hidden
  %h3 People near #{@user.first_name}:
  - @near.each do |n|
    %p
      =link_to n.to_s, user_path(n)
      %br
      = image_tag("famfamfam_flags/#{n.country.iso.downcase}.png")
      = n.country.printable_name
      %br
      = pluralize n.distance_from([resource.latitude, resource.longitude]).round(1), "mile"
      away